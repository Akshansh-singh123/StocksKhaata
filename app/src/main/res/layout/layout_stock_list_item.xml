<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="false"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="?selectableItemBackground"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/stock_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TATASTEEL"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lastUpdateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:textStyle="italic"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="4dp"
            tools:text="16-05-2021"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toTopOf="@id/stock_name_text_view"
            app:layout_constraintBottom_toBottomOf="@id/stock_name_text_view"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/market_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            tools:text="NSE"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/stock_name_text_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/rupee_symbol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:textColor="#de000000"
            android:text="@string/rupees_symbol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/investment_large_text"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/investment_large_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="88.8k"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textSize="64sp"
            android:textColor="#de000000"
            app:layout_constraintStart_toEndOf="@id/rupee_symbol_text"
            app:layout_constraintTop_toBottomOf="@+id/market_text" />

        <TextView
            android:id="@+id/short_sell_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:text="@string/short_sell"
            app:layout_constraintBottom_toTopOf="@+id/growth_text"
            app:layout_constraintEnd_toEndOf="@+id/growth_text"
            app:layout_constraintStart_toStartOf="@+id/growth_text" />

        <TextView
            android:id="@+id/growth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textColor="@color/trend_up_green"
            tools:text="\u2b06 \u20b9 888.88 (88.88%)"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/investment_large_text"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            app:layout_goneMarginTop="8dp"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/details_container"
            app:layout_constraintBottom_toTopOf="@+id/toggle_details_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_details_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Dialog.Flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:animateLayoutChanges="false"
            android:text="@string/expand_text"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_line">

            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/favorite_button"
                android:background="?selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_non_favorite" />
            <ImageButton
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/favorite_button"
                android:background="?selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_outline_edit" />
            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/favorite_button"
                android:background="?selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_delete_outline" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/details_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/divider_line"
            app:layout_constraintTop_toBottomOf="@id/investment_large_text">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="@+id/growth__percentage_header"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Heading start -->
            <TextView
                android:id="@+id/quantity_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/quantity_placeholder"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/quantity_text"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/buy_price_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/buy_price_header"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/buy_price_text"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/sell_price_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/sell_price_text"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/sell_price_text"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/investment_price_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/total_investment"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/investment_price_text"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/growth_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/p_and_l_text"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/growth_price_text"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/growth__percentage_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/p_amp_l"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/growth_price_percentage_text"
                app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/growth_price_text" />

            <!-- Heading end -->

            <!-- Text details start -->
            <TextView
                android:id="@+id/quantity_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="888"
                android:layout_marginStart="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:gravity="end"
                android:layout_marginBottom="2dp"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/buy_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="\u20b9 8888.88"
                android:layout_marginStart="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:ellipsize="marquee"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_marginBottom="2dp"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/quantity_text"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/sell_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="\u20b9 8888.88"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_marginStart="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_marginBottom="2dp"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/buy_price_text"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/investment_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="\u20b9 8888.88"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginStart="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:gravity="end"
                android:layout_marginBottom="2dp"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/sell_price_text"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/growth_price_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/trend_up_green"
                tools:text="\u2b06 \u20b9 888.88"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_marginStart="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:gravity="end"
                android:layout_marginBottom="2dp"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/investment_price_text"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/growth_price_percentage_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/trend_up_green"
                tools:text="88.88%"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_marginStart="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:gravity="end"
                android:layout_marginBottom="2dp"
                app:layout_constraintStart_toStartOf="@id/vertical_guideline"
                app:layout_constraintTop_toBottomOf="@id/growth_price_text"
                app:layout_constraintEnd_toEndOf="parent"/>
            <!-- Text details end -->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>