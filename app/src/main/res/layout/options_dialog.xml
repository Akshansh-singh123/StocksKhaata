<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/edit_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="?selectableItemBackground"
        android:text="@string/edit"
        android:textColor="#de000000"
        android:drawableStart="@drawable/ic_outline_edit"
        android:drawablePadding="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/delete_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:drawableStart="@drawable/ic_delete_outline"
        android:drawablePadding="16dp"
        android:padding="16dp"
        android:text="@string/delete"
        android:textColor="#de000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_option" />

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/delete_option" />

    <Button
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textColor="#de000000"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:layout_constraintTop_toBottomOf="@+id/divider_line" />
</androidx.constraintlayout.widget.ConstraintLayout>